<% provide :title, t("page.subject") %>
<h1><%= t "page.subject" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @subject] do |f| %>
      <%= render "shared/error_message", object: @subject %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :question_number %>
      <%= f.number_field :question_number, class: "form-control" %>

      <%= f.label :duration %>
      <%= f.number_field :duration, class: "form-control" %>

      <%= f.submit t("create.button"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
