<% provide :title, t("home.edit") %>
<h2><%= t "home.edit" %></h2>

<%= form_for resource, as: resource_name,
  url: registration_path(resource_name), html: {method: :put} do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %> <i><%= t "home.leave_blank" %></i>
    <%= f.password_field :password, autocomplete: "off" %>
    <em><%= t("home.min_chars",
      length: @minimum_password_length) if @minimum_password_length %></em> 
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i><%= t "home.pass_require" %></i>
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit t "update" %>
  </div>
<% end %>

<h3><%= t "cancel_acc" %></h3>

<p><%= t :unhappy %> 
<%= link_to t("cancel_acc"), registration_path(resource_name),
  data: {confirm: t("confirm")}, method: :delete,
  class: "btn btn-default" %></p>

<%= link_to t("back"), :back %>
